@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "";
}

<div class="container" ng-controller="search as vm">
    <div class="col-lg-12">
        <form>
            <fieldset>
                <div class="row">
                    <div id="scrollable-dropdown-menu" class="col-lg-12">
                    <input class="twitter-typeahead form-control" data-provide="typeahead" type="text" placeholder="Search" autocomplete="off" />
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
    <div id="ui-view" ui-view data-tmpl-url="@Request.RequestContext.RouteData.DataTokens["templateUrl"]"></div>
</div>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="description" content="The description of my page" />
</head>
<body ng-app data-ng-cloak>
    <div class="main" >
        <header class="navbar navbar-default navbar-fixed-top top_wrapper" role="banner">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    <span class="title"></span>
                </div>
                <div class="navbar-collapse collapse" data-collapse="isCollapsed" role="navigation">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("API", "Index", "Help", new { area = "HelpPage" }, null)</li>
                        <li>@Html.ActionLink("Admin", "Index", "Admin", new { area = "AdminPanel" }, null)</li>
                        <li>@Html.ActionLink("Search", "Index", "Search", new { area = "SearchPage" }, null)</li>
                        <li><a href="./about">About</a></li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </header>
    </div>
        <main id="content" role="main">
            @RenderBody()
            @RenderSection("SPAViews", required: false)
        </main>
        <footer class="footer_wrapper" role="contentinfo">
            @Html.Partial("_Footer")
        </footer>
    
    @Scripts.Render("~/bundles/admin")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="@Url.Content("~/Scripts/vendors/jquery/jquery.signalR-2.2.0.js")"></script>
    <script src="~/signalr/hubs"></script>
    <script src="@Url.Content("~/Scripts/require.js")" data-main="@Url.Content("~/Scripts/main.js")" type="text/javascript"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>